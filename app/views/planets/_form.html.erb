<div class="container-fluid">
  <div class="row-fluid">
    <div class="span6">
      <div class="btn-toolbar">
        <%= link_to "#{t('labels.back_to')}#{t('model.list', :model => Planet.model_name.human)}", planets_path, :class => 'btn btn-inverse' %>
      </div>
    </div>
  </div>
</div>

<%= simple_form_for(@planet, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :domain, hint: '例如：www.sptida.com，去掉http://和/符号' %>
    <%= f.input :auth_type, :collection => Planet.auth_types, :default => AuthType.auth_types.none %>
    <%= f.input :app_key %>
    <%= f.input :app_secret %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
