<div class="container-fluid">
  <div class="row-fluid">
    <div class="span6">
      <div class="btn-toolbar">
        <%= link_to "#{t('labels.back_to')}#{t('model.list', :model => Article.model_name.human)}", planet_articles_path(@planet), :class => 'btn btn-inverse' %>
      </div>
    </div>
  </div>
</div>


<%= simple_form_for([@planet, @article], :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :scheduled_at, :as => :date_time_picker %>
    <%= f.input :account_id, :collection => @planet.accounts.map {|a| [a.name, a.id]} %>
    <%= f.input :body, :input_html => { :cols => 150, :rows => 5 } %>
    <%= f.input :image %>
    <%= f.input :planet_id, :as => :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
