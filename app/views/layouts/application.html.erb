<!DOCTYPE html>
<html>
<head>
  <title>Conte</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="page">
    <div id="sidebar">
      <div id="logo-bg">
        <div id="logo"></div>
      </div>
      <div id="navigation">
        <%= render_navigation(level: 1..2, renderer: :navigation_renderer, expand_all: true) %>
      </div>
    </div>
    <div id="main" class="clearfix">
      <div id="header">
        <div class="container-fluid">
          <div class="row-fluid">
            <div class="span6">
              <ul class="breadcrumb">
                <%= yield :breadcrumbs %>
              </ul>
            </div>
            <div class="span6">
              <ul class="nav pull-right user-section">
                <%- if user_signed_in? %>
                <li class="dropdown">
                  <a href="javascript:void(0);" class="dropdown-toggle"><%= t("labels.welcome")%>, <strong><%= current_user.email %></strong> <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to(t("devise.elements.sign_out"), destroy_user_session_path, :method=>'delete') %>
                    </li>
                  </ul>
                </li>
                <% else %>
                <li><%= link_to t("devise.elements.sign_in"), :user_session %></li>
                <% end -%>
              </ul>
            </div>
          </div>
        </div>
        
      </div>

      <div id="content">
        <%= yield %>
      </div>
    </div>
  </div>
  
</body>
</html>
